<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SquareButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:onClick">SquareClick</item>
        <item name="android:backgroundTint">@color/SButtonL</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35dp</item>
    </style>
    <style name="Board">
        <item name="android:background">@color/BoardL</item>
    </style>
    <style name="Back">
        <item name="android:background">@color/SButtonL</item>
    </style>
    <style name="Restart">
        <item name="android:textSize">35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:onClick">Restart</item>
        <item name="android:text">@string/restart</item>
    </style>
    <style name="Text">
        <item name="android:textSize">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="lines">
        <item name="android:visibility">invisible</item>
        <item name="android:background">@color/black</item>
        <item name="android:elevation">3dp</item>
    </style>
</resources>